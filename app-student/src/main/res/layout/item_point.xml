<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_dark"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    tools:ignore="RtlHardcoded">

    <TextView
        android:id="@+id/amount"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/oval_minus"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        tools:text="-3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            tools:text="John Smith" />

        <tr.xip.scd.tensuu.common.ui.widget.VectorCompatTextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:drawablePadding="8dp"
            app:drawableLeftCompat="@drawable/ic_point_time_grey_12dp"
            tools:text="25 March, 2017 at 12:34 AM" />

        <tr.xip.scd.tensuu.common.ui.widget.VectorCompatTextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:drawablePadding="8dp"
            app:drawableLeftCompat="@drawable/ic_point_author_grey_12dp"
            tools:text="James Dean" />

        <LinearLayout
            android:id="@+id/reasonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:alpha="0.1"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                tools:text="Lorem ipsum dolor sit amet, tre something else doljai awnv woqlasdj kgow lsoigfki ksaodife." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/expandIndicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:alpha="0.6"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_expand_more_grey_24dp"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>
